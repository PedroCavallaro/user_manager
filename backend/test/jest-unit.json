{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../src/",
  "testEnvironment": "node",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/$1",
    "^test/mocks/(.*)$": "<rootDir>/../test/mocks/$1",
    "^test/automation/(.*)$": "<rootDir>/../test/automation/$1"
  },
  "testTimeout": 50000
}
